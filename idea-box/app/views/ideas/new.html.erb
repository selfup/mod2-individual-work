<div class="jumbotron">
<h1>New Idea!</h1>

<%= form_for @idea do |f| %>
  <p><%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.hidden_field :user_id %><br>
  <%= f.collection_select :category_id, @categories, :id, :name %><br><br>
  <%= f.submit "Create Idea" %></p>
<% end %>
